{{#section 'title'}}
Bài viết - {{this.nameCategory.name}} - {{this.nameSubCategory.name}}
{{/section}}

<a href="/post/category/{{this.nameCategory.name}}" style="color: black">
    <h3>{{this.nameCategory.name}}</h3>
</a>
<ul class="nav nav-pills">
    {{#each this.listSubCg}}
    <li><a href="/post/sub_category/{{slug}}" style="color: black;">{{name}}</a></li>
    {{/each}}
</ul>
<hr>

{{#if this.empty}}
<p class="well">Không có dữ liệu...</p>
{{else}}

<div>
    {{#each this.posts}}
    <a id="obj" href="/post/{{slug}}" style="text-decoration: none;">
        <div class="card">
            <img class="img-rounded card-img" src="/public/images/post/{{this.featured_image}}" alt="{{title}}"
                title="{{title}}">
            <div class="card-body">
                <div>
                    <a href="/post/{{slug}}">
                        <p class="card-title"> {{title}}</p>
                    </a>
                    <p class="card-summary">{{summary}}</p>
                </div>
                <div style="justify-content: space-between; flex-direction: row; display:flex; align-items: flex-end">
                    {{#ifEqual type 'FREE'}}
                    <p style="color: blue;">{{type}}</p>
                    {{/ifEqual}}
                    {{#ifEqual type 'PREMIUM'}}
                    <p style="color: red">{{type}}</p>
                    {{/ifEqual}}
                    {{!-- <a href="/post/{{slug}}" class="btn btn-primary" role="button">
                        <span class="glyphicon glyphicon-eye-open"></span>
                        Xem</a> --}}
                </div>
            </div>
        </div>
    </a>
    {{/each}}
</div>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li {{#unless this.can_go_prev}} class="disabled" {{/unless}}>
            <a href="?page={{this.prev_value}}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        {{#each this.page_items}}
        {{#if isActive}}
        <li class="active"><a href="?page={{value}}">{{value}} <span class="sr-only">(current)</span></a></li>
        {{else}}
        <li><a href="?page={{value}}">{{value}}</a></li>
        {{/if}}
        {{/each}}

        <li {{#unless this.can_go_next}} class="disabled" {{/unless}}>
            <a href="?page={{this.next_value}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>
{{/if}}


{{#section 'css'}}
<style>
    .title-container {}

    .card {
        padding: 10px;
        display: flex;
        margin-bottom: 10px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        border-radius: 5px;
    }

    .card-img {
        width: 200px;
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        padding-left: 10px;
        justify-content: space-between;
    }

    .card-title {
        font-size: 2rem;
        margin-bottom: 10px;
        font-weight: bold;
        line-height: 1.2em;
        max-height: 2.4em;
        overflow: hidden;
        color: black;
    }

    .card-summary {
        font-size: 1.5rem;
        line-height: 1.2em;
        height: 3.6em;
        overflow: hidden;
        color: black;
    }

    .card-status {
        font-weight: bold;
    }
</style>
{{/section}}