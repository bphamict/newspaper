{{#section 'title'}}Posts - Admin page{{/section}}
<ol class="breadcrumb">
    <li><a href="/admin">Home</a></li>
    <li class="active">Status</li>
</ol>
<div class="panel panel-default">
    <div class="panel-body">
        <form style="width: 30%; margin:auto;" method="POST" id="status-form">
            <div class="form-group">
                <label>Post type</label>
                <select class="form-control role-option" style="text-transform: uppercase;" name="type">
                    <option value='FREE' {{#ifEqual this.post.type 'FREE'}}selected{{/ifEqual}}>FREE</option>
                    <option value='PREMIUM' {{#ifEqual this.post.type 'PREMIUM'}}selected{{/ifEqual}}>PREMIUM</option>
                </select>
            </div>
            <div class="form-group">
                <label>Post status</label>
                <div class="input-group">
                    <input class="form-control post-status" name="status" value="{{this.post.status}}" readonly></input>
                    <span class="input-group-btn">
                        <button class="btn btn-default publish-btn" type="button">Publish</button>
                    </span>
                </div>
            </div>
            <div style="text-align:center; margin-top: 40px">
                <button role="button" class="btn btn-primary check-btn">Save</button>
            </div>
        </form>
    </div>
</div>

{{#section 'js'}}
<script>
    $(document).ready(function() {
        $('.publish-btn').on('click', function() {
            $('.post-status').val('PUBLISHED');
            $(this).attr('disabled', true);
        })
    })
</script>
{{/section}}