{{#section 'title'}}Bài viết - Trang Admin{{/section}}
<ol class="breadcrumb">
    <li><a href="/admin">Trang chủ</a></li>
    <li class="active">Bài viết</li>
</ol>
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">

        </div>
        <form class="form-inline" action="#">
            <div class="row">
                <div class="col-sm-8">
                    <a href="/admin/posts/add" class="btn btn-success" role="button">Thêm bài viết mới</a>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="txtTileP">Tìm bài viết:</label>
                        <input type="email" class="form-control" id="tilePost" placeholder="nhập tiêu đề">
                    </div>
                    <button type="submit" class="btn btn-success">Tìm</button>
                </div>
            </div>
        </form>
    </div>

    <div class="panel-body">
        {{#if this.empty}}
        <p class="well">No data...</p>
        {{else}}
        <div class="row">
            {{#each this.posts}}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">

                    <img src="../../../../public/imgs/newpapers/{{id}}/{{featured_image}}" alt="{{title}}" title="{{title}}" style="width: 100%;" >
                    <div class="caption">
                        <h3>{{title}}</h3>
                        <p>{{summary}}</p>
                        <p>
                            <a href="/admin/posts/detail?id={{id}}" class="btn btn-primary" role="button">Chi tiết</a>
                            <a href="/admin/posts/edit?id={{id}}" class="btn btn-success" role="button">Cập nhật</a>
                        </p>
                    </div>

                </div>
            </div>
            {{/each}}
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li {{#unless this.can_go_prev}} class="disabled" {{/unless}}>
                    <a href="?page={{this.prev_value}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                {{#each this.page_items}}
                {{#if isActive}}
                <li class="active"><a href="?page={{value}}">{{value}} <span class="sr-only">(current)</span></a></li>
                {{else}}
                <li><a href="?page={{value}}">{{value}}</a></li>
                {{/if}}
                {{/each}}
                <li {{#unless this.can_go_next}} class="disabled" {{/unless}}>
                    <a href="?page={{this.next_value}}" aria-label="Previous">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
        {{/if}}
    </div>
    

</div>
</div>