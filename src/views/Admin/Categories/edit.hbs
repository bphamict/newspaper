<ol class="breadcrumb">
        <li><a href="/admin">Home</a></li>
        <li><a href="/admin/categories">Categories</a></li>
        <li class="active">Add</li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Add category</h3>
    </div>
    <div class="panel-body">
        <form method="POST">
            <div class="form-group">
                <label for="txtCategoryName">ID</label>
                <input type="text" class="form-control" id="txtID" name="id" readonly value={{this.category.id}}>
                
            </div>
            <div class="form-group">
                <label for="txtCategoryName">Name of category</label>
                <input type="text" class="form-control" id="txtName" name="name" autofocus value={{this.category.name}}>
                
            </div>
            <div class="form-group">
                <label for="txtCategoryName">Status</label>
                <input type="text" class="form-control" id="txtIsExist" name="isDeleted" value={{this.category.isDeleted}}>
                
            </div>
            <a href="/admin/categories" class="btn btn-success" role="button">
                <span class="glyphicon glyphicon-backward"></span>
            </a>
            <button type="submit" class="btn btn-primary" formaction="/admin/categories/update">
                <span class="glyphicon glyphicon-ok-circle"></span> Save
            </button>
            {{#if this.category.isDeleted}}
            <button type="submit" class="btn btn-danger" disabled formaction="/admin/categories/delete">
                <span class="glyphicon glyphicon-remove-circle"></span> Delete
            </button>
            {{else}}
            <button type="submit" class="btn btn-danger" formaction="/admin/categories/delete">
                <span class="glyphicon glyphicon-remove-circle"></span> Delete
            </button>
            {{/if}}
        </form>
    </div>
</div>