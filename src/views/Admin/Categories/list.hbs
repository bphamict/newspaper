{{#section 'title'}}Main categories - Admin page{{/section}}
<ol class="breadcrumb">
    <li><a href="/admin">Home</a></li>
    <li class="active">Main Categories</li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-9">
                {{!-- <h3 class="panel-title"><strong>Danh sách các danh mục</strong></h3> --}}
            </div>
            <div class="col-sm-2">
                <a href="/admin/categories/add" class="btn btn-success btn-sm" role="button">
                    <span class="glyphicon glyphicon-plus-sign"></span> Add a category
                </a>
            </div>

        </div>
    </div>
    <div class="panel-body">
        {{#if this.empty}}
        <p class="well">No data...</p>
        {{else}}
        <div class="panel panel-default">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col" class="text-center">ID</th>
                        <th scope="col">Name of category</th>
                        <th scope="col" class="text-center">Deleted</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each this.categories}}
                    <tr>
                        <td class="text-center">{{id}}</td>
                        <td>{{name}}</td>
                        <td class="text-center">{{isDeleted}}</td>
                        <td class="text-right">
                            <a class="btn btn-primary btn-sm" href="/admin/categories/edit?id={{id}}" role="button"
                                title="Edit">
                                <span class="glyphicon glyphicon-pencil"></span> Edit
                            </a>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
        {{/if}}
    </div>
</div>