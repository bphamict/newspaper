{{#section 'title'}}Danh mục chính - Trang Admin{{/section}}
<ol class="breadcrumb">
    <li><a href="/admin">Trang chủ</a></li>
    <li class="active">Các danh mục chính</li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-9">
                {{!-- <h3 class="panel-title"><strong>Danh sách các danh mục</strong></h3> --}}
            </div>
            <div class="col-sm-2">
                <a href="/admin/categories/add" class="btn btn-success btn-sm" role="button">
                    <span class="glyphicon glyphicon-plus-sign"></span> Thêm danh mục
                </a>
            </div>

        </div>
    </div>
    <div class="panel-body">
        {{#if this.empty}}
        <p class="well">Không có dữ liệu...</p>
        {{else}}
        <div class="panel panel-default">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col" class="text-center">ID</th>
                        <th scope="col">Tên danh mục</th>
                        <th scope="col" class="text-center">Đã xoá</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each this.categories}}
                    <tr>
                        <td class="text-center">{{id}}</td>
                        <td>{{name}}</td>
                        <td class="text-center">{{isDeleted}}</td>
                        <td class="text-right">
                            <a class="btn btn-primary btn-sm" href="/admin/categories/{{slug}}/edit" role="button"
                                title="Edit">
                                <span class="glyphicon glyphicon-pencil"></span> Chỉnh sửa
                            </a>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li {{#unless this.can_go_prev}} class="disabled" {{/unless}}>
                    <a href="?page={{this.prev_value}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                {{#each this.page_items}}
                {{#if isActive}}
                <li class="active"><a href="?page={{value}}">{{value}} <span class="sr-only">(current)</span></a></li>
                {{else}}
                <li><a href="?page={{value}}">{{value}}</a></li>
                {{/if}}
                {{/each}}
                <li {{#unless this.can_go_next}} class="disabled" {{/unless}}>
                    <a href="?page={{this.next_value}}" aria-label="Previous">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
        {{/if}}
    </div>
</div>