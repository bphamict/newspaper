 {{#section 'title'}}Subcategories - Admin page{{/section}}
<ol class="breadcrumb">
        <li><a href="/admin">Home</a></li>
        <li class="active">Subcategories</li>
</ol>

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-9">
            {{!-- <h3 class="panel-title"><strong>Danh sách các danh mục</strong></h3> --}}
        </div>
        <div class="col-sm-2">
            <a href="/admin/subcategories/add" class="btn btn-success btn-sm" role="button">
                <span class="glyphicon glyphicon-plus-sign"></span> Add a subcategory
            </a>
        </div>
        
    </div>
  </>
  <div class="panel-body">
    {{#if this.empty}}
    <p class="well">No data...</p>
    {{else}}
    <div class="panel panel-default">
        <table class="table">
           <thead>
                <tr>
                <th scope="col" class="text-center">ID</th>
                <th scope="col" class="text-center">ID of main category</th>
                <th scope="col">Name of subcategory</th>
                <th scope="col">Name of Main category</th>
                <th scope="col" class="text-center">Deleted</th>
                </tr>
            </thead>
            <tbody>
                {{#each this.subcategories}}
                <tr>
                    <td class="text-center">{{id}}</td>
                    <td class="text-center">{{category_id}}</td>
                    <td>{{name}}</td>
                    <td>{{category_name}}</td>
                    <td class="text-center">{{isDeleted}}</td>
                    <td class="text-right">
                        <a class="btn btn-primary btn-sm" href="/admin/subcategories/edit?id={{id}}&category_id={{category_id}}" role="button" title="Edit">
                            <span class="glyphicon glyphicon-pencil"></span> Edit 
                        </a>
                    </td>
                </tr>
                {{/each}}
            
            </tbody>
        </table>
    </div>
    {{/if}}
  </div>
</div>
















