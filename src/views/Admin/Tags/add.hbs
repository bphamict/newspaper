<ol class="breadcrumb">
        <li><a href="/admin">Home</a></li>
        <li><a href="/admin/tags">Tags</a></li>
        <li class="active">Add</li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Add tag</h3>
    </div>
    <div class="panel-body">
        <form method="POST" action="" id="frmAdd">
            <div class="form-group">
                <label for="txtCategoryName">Name of tag</label>
                <input type="text" class="form-control" id="txtName" name="name" autofocus>
                <p style="color: red;" id="txtValidate"></p>
                
            </div>
            <div class="form-group">
                <label for="txtCategoryName">Status</label>
                <input type="text" class="form-control" id="txtIsExist" name="isDeleted" value="0" readonly>
                
            </div>
            <a href="/admin/tags" class="btn btn-success" role="button">
                <span class="glyphicon glyphicon-backward"></span>
            </a>
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-ok-circle"></span> Save
            </button>
    
        </form>
    </div>
</div>

<script>
    function required(input) {
        if (input.value.length == 0){
            return false; 
        }  	
        return true; 
    } 

    var form = document.getElementById("frmAdd");

    form.addEventListener("submit", function(){
        var txtName = document.getElementById("txtName");
        if(!required(txtName)){
            event.preventDefault();
            document.getElementById("txtValidate").innerHTML = "The name of tag field is not empty!!!";
            txtName.focus();
        }
        
    }, true);
</script>