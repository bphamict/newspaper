<div class="panel panel-default">
    <div class="panel-heading">
        <div class="input-group">
            <input type="text" class="form-control search-input" placeholder="Search for...">
            <span class="input-group-btn">
                <button class="btn btn-default search-btn" type="button">
                    <span class="glyphicon glyphicon-search"></span>
                </button>
            </span>
        </div>
    </div>
    <div class="panel-body">
        <div>
            <span style="font-size: 1.75rem;">Keywords: <b>{{q}}</b></span>
            <span style="font-size: 1.75rem; float: right;">Tìm theo:
                <select id="select-search-by">
                    <option value="title" {{#ifEqual this.search_by 'title'}}selected{{/ifEqual}}>Tiêu đề</option>
                    <option value="summary" {{#ifEqual this.search_by 'summary'}}selected{{/ifEqual}}>Tóm tắt</option>
                    <option value="content_text" {{#ifEqual this.search_by 'content_text'}}selected{{/ifEqual}}>Nội dung bài viết</option>
                </select>
            </span>
        </div>
        <hr>
        {{#each this.posts}}
        <a style="color: inherit;" href="/post/{{this.slug}}">
            <div class="card">
                <div style="display: flex;">
                    <img class="card-img" src="/public/images/post/{{this.featured_image}}">
                    <div class="card-body">
                        <div>
                            <p class="card-title">{{this.title}}</p>
                            <p class="card-summary">{{this.summary}}</p>
                        </div>
                        <div>
                            <span>{{this.category_name}} / {{this.sub_cagegory_name}}</span>
                            <span style="float:right"><b>{{this.publish_time}}</b></span>
                        </div>
                    </div>
                </div>
                <div style="margin-top: 10px;">
                    <p>Tags:
                        {{#each @root.post_tags}}
                            {{#ifEqual this.post_id ../id}}
                            <span style="background-color: gray; padding: 5px; color:white; border-radius: 4px">{{this.name}}</span>
                            {{/ifEqual}}
                        {{/each}}
                    </p>
                </div>
            </div>
        </a>
        {{/each}}

        {{#ifNotEqual numOfPage 0}}
        <nav aria-label="Page navigation">
            <ul class="pagination" style="display: flex;justify-content: center;margin-top: 30px;">
                <li class="prev-page {{#unless this.canGoPrev}}disabled{{/unless}}"
                    {{#if this.canGoPrev}}onclick="goPrev()" style="cursor: pointer;" {{/if}}>
                    <span>
                        <span aria-hidden="true">&laquo;</span>
                    </span>
                </li>
                {{#each this.pageItems}}
                <li class="page-item {{#if this.isActive}}active{{/if}}"
                    style="{{#if this.isActive}}pointer-events: none;{{/if}} cursor: pointer;">
                    <span>{{this.value}}</span></li>
                {{/each}}
                <li class="next-page {{#unless this.canGoNext}}disabled{{/unless}}"
                    {{#if this.canGoNext}}onclick="goNext()" style="cursor: pointer;" {{/if}}>
                    <span>
                        <span aria-hidden="true">&raquo;</span>
                    </span>
                </li>
            </ul>
        </nav>
        {{/ifNotEqual}}
    </div>
</div>

{{#section 'title'}}Search keyword: {{q}}{{/section}}

{{#section 'js'}}
<script>
    $(document).ready(function () {
        function redirect(text) {
            window.location.assign(`/search?q=${encodeURI(text.trim())}&search_by=${$('#select-search-by').val()}&page=1`);
        }

        $('.search-btn').on('click', function () {
            !!$('.search-input').val() && redirect($('.search-input').val());
        })

        $('.search-input').keypress(function (e) {
            if (e.keyCode == 13 && !!$(this).val()) {
                redirect($(this).val());
            }
        })

        $('.page-item').on('click', function () {
            window.location.assign(`/search?q=${encodeURI("{{q}}")}&search_by=${$('#select-search-by').val()}&page=${$(this).text()}`);
        })

        $('#select-search-by').on('change', function () {
            window.location.assign(`/search?q=${encodeURI("{{q}}")}&search_by=${$(this).val()}`);
        })
    })
    function goPrev() {
        const pageItems = {{{ json pageItems }}};
        const activePage = pageItems.find(item => item.isActive === true);
        window.location.assign(`/search?q=${encodeURI("{{q}}")}&search_by=${$('#select-search-by').val()}&page=${activePage.value - 1}`); 
    }

    function goNext() {
        const pageItems = {{{ json pageItems }}};
        const activePage = pageItems.find(item => item.isActive === true);
        window.location.assign(`/search?q=${encodeURI("{{q}}")}&search_by=${$('#select-search-by').val()}&page=${activePage.value + 1}`);
    }
</script>
{{/section}}

{{#section 'css'}}
<style>
    .card {
        padding: 10px;
        margin-bottom: 10px;
        border: 0.5px solid black;
        background-color: #f5f5f5;
    }

    .card-img {
        width: 200px;
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        padding-left: 10px;
        justify-content: space-between;
    }

    .card-title {
        font-size: 2rem;
        margin-bottom: 10px;
        font-weight: bold;
        line-height: 1.2em;
        max-height: 2.4em;
        overflow: hidden;
    }

    .card-summary {
        font-size: 1.5rem;
        line-height: 1.2em;
        height: 3.6em;
        overflow: hidden;
    }

    a:hover { 
        text-decoration: none; 
    } 
</style>
{{/section}}